section.popup.hidden
  h1.popup__title Participate now
  a.popup__close(href="#")
  form.form
    .form-row
      label(for="name", class="form__label") Name
      input(type="text", name="name", id="name", class="form__input", required)
    .form-row
      label(for="email", class="form__label") E-mail
      input(type="email", name="email", id="email", class="form__input", required)
    .form-row
      label(for="message", class="form__label") Message
      textarea(name="message", id="message", class="form__textarea", required)
    .form-row
      input(type="submit", value="submit", class="form__btn form__btn_submit")
      input(type="reset", value="clean", class="form__btn form__btn_clean")
.overlay.hidden